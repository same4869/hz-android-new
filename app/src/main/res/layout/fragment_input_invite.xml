<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/input_invite" />

            <EditText
                android:id="@+id/invitation_code_txt"
                android:layout_width="@dimen/dp210"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp50v"
                android:background="@null"
                android:gravity="center"
                android:hint="输入邀请码"
                android:maxEms="8"
                android:singleLine="true" />

        </RelativeLayout>

        <Button
            android:id="@+id/input_invitation_code_submit"
            android:layout_width="@dimen/dp180"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30v"
            android:background="@drawable/shape_corner_login"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:text="提交邀请码"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
