<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp411"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="@dimen/dp328"
                android:layout_height="@dimen/dp411"
                android:layout_centerInParent="true"
                android:background="@mipmap/input_invite" />

            <EditText
                android:id="@+id/invitation_code_txt"
                android:layout_width="@dimen/dp250"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp80v"
                android:background="@null"
                android:gravity="center"
                android:hint="输入邀请码"
                android:maxEms="8"
                android:singleLine="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/dp200"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="输入小伙伴的邀请码，您将获得66个喵喵币" />

        <Button
            android:id="@+id/input_invitation_code_submit"
            android:layout_width="@dimen/dp180"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp50"
            android:background="@drawable/shape_corner_login"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:text="提交邀请码"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>
