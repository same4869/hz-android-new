<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comm_titlebar_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp48">

    <TextView
        android:id="@+id/comm_titlebar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingRight="@dimen/dp12"
        android:textColor="@drawable/comm_titlebar_selector"
        android:textSize="@dimen/sp16"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comm_titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/comm_titlebar_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/font_content"
            android:textSize="@dimen/sp12"
            android:visibility="gone" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/comm_custom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/comm_titlebar_menu_layout"
        android:layout_toRightOf="@+id/comm_titlebar_back"
        android:visibility="invisible"></FrameLayout>

    <LinearLayout
        android:id="@+id/comm_titlebar_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comm_titlebar_menu2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp6"
            android:paddingRight="@dimen/dp6"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/comm_collect_titlebar_menu_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp6"
            android:paddingRight="@dimen/dp20"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/comm_titlebar_buttom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/te_bg_input_3_line"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/comm_titlebar_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>