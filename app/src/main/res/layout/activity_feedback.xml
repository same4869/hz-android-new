<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.renren.wawa.view.CommTitleBarView
        android:id="@+id/title_bar"
        style="@style/CommTitleBarViewStyle"
        app:titleText="意见反馈" />

    <EditText
        android:id="@+id/feedback_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp110"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/bg_recycler_view"
        android:gravity="start"
        android:hint="写下您的宝贵意见"
        android:textSize="@dimen/sp16" />

    <EditText
        android:id="@+id/feedback_moblie"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginStart="@dimen/dp10"
        android:background="@drawable/bg_recycler_view"
        android:gravity="start"
        android:hint="您的联系方式"
        android:textSize="@dimen/sp16" />


    <Button
        android:id="@+id/feed_back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/shape_corner"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16" />
</LinearLayout>
